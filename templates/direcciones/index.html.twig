{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Mis direcciones {% endblock %}

{% block body %}
    {{ parent() }}

<!-- üåç EMPIEZA APARTADO DE DOMICILIO üåç -->
<div class="container mt-150 mb-150">
    <div class="row">
        <div class="col-md-12">
            <div class="card border-primary">
                <div class="card-header bg-primary">
                    <h3 class="text-center text-white">üè† Direcciones üè†</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        {% for direccion in direcciones %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ direccion.nombre }}: {{ direccion.calle }}, {{ direccion.ciudad }}, {{ direccion.pais }}
                                <div>
                                    <button class="btn btn-primary btn-sm mr-2" onclick="openModal('editar', '{{ direccion.id }}')">‚úèÔ∏è Editar</button>
                                    <form method="post" action="{{ path('app_direcciones_eliminar', {'id': direccion.id}) }}" style="display:inline;" onsubmit="return confirm('¬øEst√°s seguro de que deseas eliminar esta direcci√≥n?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ direccion.id) }}">
                                        <button class="btn btn-danger btn-sm">üóëÔ∏è Eliminar</button>
                                    </form>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                    <button class="btn btn-primary btn-block mt-3" onclick="openModal('agregar')">‚ûï Agregar Direcci√≥n</button>
                    <a href="{{ path('app_perfil_usuario') }}" class="btn btn-secondary btn-block mt-3">‚¨ÖÔ∏è Regresar al Perfil</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- üåç TERMINA APARTADO DE DOMICILIO üåç -->

<!-- Modal -->
<div class="modal fade" id="direccionModal" tabindex="-1" role="dialog" aria-labelledby="direccionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="direccionModalLabel">üè† Gesti√≥n de Direcciones üè†</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="direccionForm">
                    <input type="hidden" id="direccion_id" name="direccion_id">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="calle" class="form-label">Calle</label>
                        <input type="text" class="form-control" id="calle" name="calle" required>
                    </div>
                    <div class="mb-3">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                    </div>
                    <div class="mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="estado" name="estado" required>
                    </div>
                    <div class="mb-3">
                        <label for="cp" class="form-label">C√≥digo Postal</label>
                        <input type="text" class="form-control" id="cp" name="cp" required>
                    </div>
                    <div class="mb-3">
                        <label for="pais" class="form-label">Pa√≠s</label>
                        <input type="text" class="form-control" id="pais" name="pais" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>


    <script>
        function openModal(accion, id = null) {
            var modal = $('#direccionModal');
            var titulo = modal.find('.modal-title');
            var form = document.getElementById('direccionForm');
            var eliminarBtn = $('#eliminarBtn');
            var formAction = form.action;

            if (accion === 'agregar') {
                titulo.text('Agregar Direcci√≥n');
                form.reset();
                form.action = '/direcciones/crear';
            } else if (accion === 'editar') {
                titulo.text('Editar Direcci√≥n');
                fetch(`/direcciones/${id}`)
                    .then(response => response.json())
                    .then(data => {
                        $('#direccion_id').val(id);
                        $('#nombre').val(data.nombre);
                        $('#calle').val(data.calle);
                        $('#ciudad').val(data.ciudad);
                        $('#estado').val(data.estado);
                        $('#cp').val(data.cp);
                        $('#pais').val(data.pais);
                        form.action = `/direcciones/${id}/editar`;
                    });
            } else if (accion === 'eliminar') {
                titulo.text('Eliminar Direcci√≥n');
                $('#direccion_id').val(id);
                form.innerHTML = `<p>¬øEst√°s seguro de que deseas eliminar esta direcci√≥n?</p>`;
                eliminarBtn.show();
                form.action = `/direcciones/${id}/eliminar`;
            }

            modal.modal('show');
        }

        document.getElementById('direccionForm').addEventListener('submit', function(e) {
            e.preventDefault();
            var form = new FormData(this);
            var url = this.action;

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify(Object.fromEntries(form.entries()))
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    location.reload();
                } else {
                    alert('Error al guardar la direcci√≥n');
                }
            });
        });
    </script>
{% endblock %}
