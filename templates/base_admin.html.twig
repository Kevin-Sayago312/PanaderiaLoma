<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Panadería Loma{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- ICONO DE LA PAGINA  -->
        <link rel="shortcut icon" type="image/png" href="assets/img/panaderia.png">

        <!-- EMPIEZAN DIRECCIONES DE LOS CSS -->
        {% block stylesheets %}
       <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="assets/img/panaderia.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="../assets/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="../assets/bootstrap/css/bootstrap.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="../assets/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="../assets/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="../assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="../assets/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="../assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="../assets/css/responsive.css">
    <!-- iconos de bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% endblock %}
        <!-- TERMINAN DIRECCIONES DE LOS CSS -->

    </head>
    <body class="bg-dark">
        {% block body %}
	
	<!-- EMPIEZA HEADER -->
<header class="top-header-area" id="sticker" style="background-color: #000; padding: 15px 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-sm-12">
                <div class="nav__logo text-white">
                    <a href="{{ path('app_index') }}" style="text-decoration: none;">
                        <h3 style="color: #fff; font-size: 28px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">Panaderia <span style="color: #ffd700;">Loma</span></h3>
                    </a>
                </div>
            </div>
            <div class="col-lg-9 col-sm-12">
                <div class="main-menu-wrap">
                    <!-- menu start -->
                    <nav class="main-menu">
                        <ul class="d-flex justify-content-center align-items-center text-center" style="margin-top: 10px;">
                            <li class="current-list-item"><a href="{{ path('app_index') }}" style="color: #fff;">Inicio</a></li>
                            <li><a href="{{ path('app_about') }}" style="color: #fff;">Nosotros</a></li>
                            <li><a href="{{ path('app_shop') }}" style="color: #fff;">Tienda</a></li>

                            <li class="d-flex align-items-center">
                                <div class="header-icons d-flex align-items-center">
                                    {% if app.user %}
                                        <a href="{% if 'ROLE_ADMIN' in app.user.roles %}{{ path('app_admin') }}{% else %}{{ path('app_perfil_usuario') }}{% endif %}" class="my-auto text-white">
                                            Mi perfil
                                        </a>
                                        <ul class="sub-menu">
                                            <li><a href="{{ path('app_logout') }}" style="color: #000;">Cerrar Sesión</a></li>
                                        </ul>
                                    {% else %}
                                        <a href="{{ path('app_login') }}" class="my-auto text-white">
                                            Iniciar sesión
                                        </a>
                                    {% endif %}
                                    <a class="shopping-cart ml-3" href="{{ path('app_cart') }}" style="color: #fff;">
                                        Carrito
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                    <!-- menu end -->
                </div>
            </div>
        </div>
    </div>
</header>
<!-- TERMINA HEADER -->
        {% endblock %}


		<!-- EMPIEZA DIRECCIONES DE LOS SCRIPTS -->
        {% block javascripts %}
        <!-- jquery -->
	<script src="assets/js/jquery-1.11.3.min.js"></script>
	<!-- bootstrap -->
	<script src="assets/bootstrap/js/bootstrap.min.js"></script>
	<!-- count down -->
	<script src="assets/js/jquery.countdown.js"></script>
	<!-- isotope -->
	<script src="assets/js/jquery.isotope-3.0.6.min.js"></script>
	<!-- waypoints -->
	<script src="assets/js/waypoints.js"></script>
	<!-- owl carousel -->
	<script src="assets/js/owl.carousel.min.js"></script>
	<!-- magnific popup -->
	<script src="assets/js/jquery.magnific-popup.min.js"></script>
	<!-- mean menu -->
	<script src="assets/js/jquery.meanmenu.min.js"></script>
	<!-- sticker js -->
	<script src="assets/js/sticker.js"></script>
	<!-- main js -->
	<script src="assets/js/main.js"></script>
        {% endblock %}
        <!-- TERMINAN DIRECCIONES DE LOS SCRIPTS -->
    </body>
</html>
